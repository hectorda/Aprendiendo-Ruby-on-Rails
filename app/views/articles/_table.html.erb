<table class="table">
		<thead> 
			<tr>
				<th>ID</th>
				<th>Titulo</th>
				<th>Cuerpo</th>
				<th>Visitas</th>
				<th>Creado</th>
    			<th width="120px">Acciones</th>
			</tr>
		</thead>
		<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td><%= article.id %></td>				
				<td><%= article.title %></td>
				<td><%= article.body%></td>
				<td><%= article.visits_count %> </td>
				<td><%= article.created_at %> </td>
				<td><%= link_to article, method: :delete, class: "btn btn-primary" do %>
				    <i class="glyphicon glyphicon-trash">Eliminar</i>
					<% end %>
					<%= link_to article, method: :get, class: "btn btn-primary" do %>
				    <i class="glyphicon glyphicon-eye">Ver</i>
					<% end %>

					<%= link_to edit_article_path(article) , class: "btn btn-primary" do %>
				    <i class="glyphicon glyphicon-edit">Editar</i>
					<% end %>
				    
				    
				</td>
			</tr>
			<% end %>
		</tbody>

	</table>